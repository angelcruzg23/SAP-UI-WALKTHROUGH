<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="helloDialog"
        title="{/recipient/name}"
        icon="sap-icon://account"
    >
        <content>
            <core:Icon
                src="sap-icon://globe"
                size="8rem"
                class="sapUiMediumMargin"
            />
        </content>
        <beginButton>
            <Button
                text="{i18n>dialogButton}"
                press="onCloseDialog"
            />
        </beginButton>
    </Dialog>
</core:FragmentDefinition>
